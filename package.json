{
	"name": "auproximity-server",
	"version": "0.1.4",
	"description": "Proximity Voice Server",
	"author": "cybershard",
	"contributors": [
		"edqx",
		"miniduikboot"
	],
	"license": "GPL-3.0-only",
	"scripts": {
		"serve": "ts-node-dev ./src/main.ts",
		"dev": "ts-node ./src/main.ts",
		"build": "cross-env NODE_ENV=production tsc -p ./",
		"build:docker": "docker build -t auproxy-backend .",
		"start": "node ./dist/main.js",
		"lint": "eslint ./src/**/*.ts --fix && prettier --write .",
		"heroku-postbuild": "npm install --global cross-env && yarn && yarn install --check-files && yarn build && yarn workspace auproximity-webui run build && mkdir -p dist/dist && cp -r auproximity-webui/dist dist",
		"prepare": "husky install"
	},
	"dependencies": {
		"@microsoft/signalr": "^5.0.7",
		"@sentry/node": "^6.2.5",
		"@skeldjs/client": "^2.11.10",
		"@skeldjs/constant": "^2.11.10",
		"@skeldjs/core": "^2.11.10",
		"@skeldjs/protocol": "^2.11.10",
		"@skeldjs/text": "^2.11.10",
		"@skeldjs/util": "^2.11.10",
		"chalk": "^4.1.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"heroku-ssl-redirect": "^0.1.1",
		"lodash.throttle": "^4.1.1",
		"peer": "^0.6.1",
		"socket.io": "^3.0.1",
		"ts-node-dev": "^1.1.6",
		"tslib": "^2.0.3",
		"uuid": "^8.3.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.9",
		"@types/lodash": "^4.14.165",
		"@types/node": "^14.14.7",
		"@types/uuid": "^8.3.0",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.7.0",
		"@typescript-eslint/parser": "^4.7.0",
		"cross-env": "^7.0.2",
		"del": "^6.0.0",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-promise": "^4.2.1",
		"husky": "^6",
		"lint-staged": "^10",
		"loadash": "^1.0.0",
		"prettier": "2.2.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.2.4"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"plugins": [
			"@typescript-eslint",
			"promise"
		],
		"extends": [
			"eslint:recommended",
			"plugin:promise/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:import/typescript",
			"prettier"
		],
		"parserOptions": {
			"ecmaVersion": 2020
		},
		"parser": "@typescript-eslint/parser",
		"rules": {
			"quotes": "error",
			"semi": "error"
		}
	},
	"lint-staged": {
		"*.ts": "eslint --cache --fix",
		"*.{json,md,ts,vue,yaml}": "prettier --write"
	},
	"engines": {
		"node": "16.18.0",
		"npm": "8.19.2"
	}
}
